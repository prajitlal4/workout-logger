<div class="flex flex-col mb-8 md:mb-10 justify-between md:flex-row">
  <div>
    <h1 class="text-4xl mb-1"><%= @workout_session.routine.name %> Session</h1>
    <% Time.zone = 'Perth'%>
    <p>Started at: <%= @workout_session.start_time.in_time_zone.strftime('%H:%M, %d/%m/%Y') %></p>
    <p>End time: 
      <% if @workout_session.ended? %>
        <%= @workout_session.end_time.strftime('%H:%M, %d/%m/%Y') %>  
      <% end %>
    </p>
  </div>
</div>

<%= form_with(model: @workout_session, local: true) do |form| %>
    <!-- Render the partial for editing set details during an active session -->
  <%= render 'active_session_fields', form: form %>
  <%= form.submit "Update Session", class: "mt-3 rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
  <% if !@workout_session.ended?%>
  <%= link_to 'End Session', end_session_workout_session_path(@workout_session), data: { turbo_method: :patch }, class: "mt-3 rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
<% end %>
<% end %>


