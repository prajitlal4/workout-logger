<div class="flex flex-col mb-8 md:mb-10 justify-between md:flex-row">
  <div>
    <h1 class="text-4xl mb-1">Add Exercise to Routine</h1>
  </div>
  <%= link_to 'Back to Routines', group_routine_path(@routine.group, @routine), class: "self-start md:self-center rounded-md bg-white px-3 py-2 mt-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
</div>

<%= link_to "Create a new Exercise", new_group_routine_exercise_path(@routine.group_id, @routine), class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50"%>

<% @categories.each do |category| %>
  <% category_exercises = @category_exercises[category.id] %>
  <h3 class="text-lg font-semibold text-gray-900 mb-2 mt-6"><%= category.name %></h3>
  <ul role="list" class="divide-y divide-gray-100 overflow-hidden bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl">
    <% category_exercises.each do |exercise| %>
      <%= link_to (group_routine_add_exercise_path(@routine.group_id, @routine, exercise_id: exercise.id)), data: { turbo_method: :post } do %>
        <li class="relative flex justify-between items-center gap-x-6 px-4 py-5 hover:bg-gray-50 sm:px-6 ">
          <div class="flex min-w-0 gap-x-4">
            <div class="min-w-0 flex-auto">
              <p class="text-sm text-gray-900">
                <%= exercise.name %> <br/>
              </p>
            </div>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
<% end %>
